pkgname=DockedBackup
pkgver=1.0.0
pkgrel=1
pkgdesc="This is a simple backup tool for offline backups."
arch=("x86_64" "aarch64")
url="https://github.com/TheKing6488/Kopia-Backup"
license=('MIT')
optdepends=(
  'rclone'
  'kopia'
)
provides=()
conflicts=()
source=(dockedbackup.tar.gz)
sha256sums=('SKIP')
install=dockedbackup_install.sh

prepare() {
  tar -xzf "dockedbackup.tar.gz"
}

package() {

  # Helper‑Script
  install -Dm755 dockedbackup.sh "$pkgdir/usr/libexec/dockedbackup/dockedbackup.sh"
  # AOT-Binary
  install -Dm755 "KopiaBackup.Console" "$pkgdir/usr/bin/dockedbackup"
  # systemd‑Unit
  install -Dm644 "dockedbackup@.service" "$pkgdir/usr/lib/systemd/system/dockedbackup@.service"
}