pkgname=DockedBackup
pkgver=1.0.0
pkgrel=1
pkgdesc="This is a simple backup tool for offline backups."
arch=("x86_64")
url="https://github.com/TheKing6488/Kopia-Backup"
license=('MIT')
depends=('rclone' 'kopia')
provides=()
conflicts=()
source=(kopiabackup.tar.gz)
sha256sums=('SKIP')

package() {
  cd "$srcdir"
  tar -xzf "kopiabackup.tar.gz"
  install -Dm755 "dockedbackup/KopiaBackup.Console" "$pkgdir/usr/bin/dockedbackup"
#   install -Dm644 "$srcdir/mytool-backup.service" "$pkgdir/usr/lib/systemd/system/mytool-backup.service"
}